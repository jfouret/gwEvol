#!/usr/bin/env python
import argparse
author='Julien Fouret'
contact='julien@fouret.me'

parser = argparse.ArgumentParser(description='Configure makefile for installation',epilog="Author : "+author+" for more informations or enquiries please contact "+contact,formatter_class=argparse.ArgumentDefaultsHelpFormatter)
parser.add_argument('-install_path', metavar='', required=False,default="/usr/bin/", help="a bin directory present in env $PATH to call executables")
parser.add_argument('-ete3', metavar='', required=False,default="", help="Path of directory with ete3 executable")

args=parser.parse_args()

import os
with open('makefile','w') as mf:
	mf.write("# CAN BE CHANGED\n\n")
	mf.write("INSTALLPATH="+os.path.abspath(args.install_path)+"\n")
	mf.write("ete3="+os.path.abspath(args.ete3)+"\n")
	mfin=open("makefile.in")
	mf.write(mfin.read())
	mfin.close()
